@model List<VuiwModels.CadeteViewModel>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<a class="nav-link text-dark" asp-area="" asp-controller="Cadete" asp-action="AsignarPedido">Asignar Pedidos</a>
        
    <table class="table table-dark">

        <thead>
            <th>Id</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Borrar</th>
            <th>Actualizar</th>
        </thead>

        @foreach (var item in Model)
        { 
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td> @Html.ActionLink("Delete", "delete", new { Id = item.Id })</td>
                <td> @Html.ActionLink("Updata", "edit", new { Id = item.Id })</td>
        </tr>
        }

    </table>